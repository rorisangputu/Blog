<% layout('layouts/boilerplate') %>
<div class="blog-img">
  
</div>
<section class="content-container">
  <div class="mb-3">
    <h1>Blogs:</h1>
    <a class="btn btn-primary" href="/blogs/new">Add Blog</a>
  </div>
  
    <% for(let blog of blogs){ %>
      <div class="card mb-3" style="max-width: 540px;">
        <div class="row g-0">
          <% if (blog.image) {%>
          <div class="col-md-4">
            <img src="<%= blog.image %>" class="img-fluid rounded-start h-100" style="object-fit: cover;" alt="...">
          </div>
          <% } %>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title"><%= blog.title %></h5>
              <p class="card-text"></p>
              <p class="card-text"><small class="text-body-secondary"><%= blog.formattedDate %></small></p>
              <a class="btn btn-primary" href="/blogs/<%= blog._id %>">View</a>
            </div>
          </div>
        </div>
      </div>
      <% } %>
</section>


