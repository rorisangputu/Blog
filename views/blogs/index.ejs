<% layout('layouts/boilerplate') %>
<div class="blog-img">
  
</div>

<div class="container">
  <div class="row">
    
      <section class="content-container">
        <div class="mb-3 blog-header">
          <% if (currentUser && currentUser.isAdmin === true) {%>
          <a class="btn btn-primary" href="/blogs/new">Add Blog</a>
          <% } %>
        </div>
        <h2>Blogs:</h2>
        <% for(let blog of blogs){ %>
              <div class="card mb-3 mt-3" style="max-width: 440px;" > 
                <div class="row g-0">
                  <% if (blog.image) {%>
                  <div class="col-md-5">
                    <img src="<%= blog.image %>" class="img-fluid rounded-start h-100" style="object-fit: cover;" alt="...">
                  </div>
                  <% } %>
                  <div class="col-md-7">
                    <div class="card-body">
                      <h5 class="card-title"><%= blog.title %></h5>
                      <p class="card-text"></p>
                      <p class="card-text"><small class="text-body-secondary"><%= blog.formattedDate %></small></p>
                      <a class="btn btn-primary" href="/blogs/<%= blog._id %>">View</a>
                    </div>
                  </div>
                </div>
              </div>
        <% } %>  
      </section>
  </div>
</div>

