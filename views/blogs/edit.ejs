<% layout('layouts/boilerplate') %>
<h1 class="mb-3">Edit products</h1>
    <form action="/blogs/<%= blog._id %>?_method=PUT" method="post">
        <div class="mb-3">
            <label class="form-label" for="title">Title</label>
            <input class="form-control" type="text" id="title" name="title" value="<%= blog.title %>">
        </div>
        <div class="mb-3">
            <label class="form-label" for="content">Content</label>
            <textarea class="form-control" rows="8" cols="8" style="white-space: pre-line;"  type="text"
             name="content" required id="content"><%= blog.content %></textarea>
        </div>
        <div class="mb-3">
            <label class="form-label" for="image">Image Url</label>
            <input class="form-control" type="text" id="image" name="image" value="<%= blog.image %>">
        </div>
        <button class="btn btn-success mb-3">Submit</button>
    </form>
    <a href="/blogs">Cancel</a>

