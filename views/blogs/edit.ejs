<h1>Edit products</h1>
    <form action="/blogs/<%= blog._id %>?_method=PUT" method="post">
        <label for="title">Title</label>
        <input type="text" id="title" name="title" value="<%= blog.title %>">
        <label for="content">Content</label>
        <textarea rows="8" cols="8" style="white-space: pre-line;"  type="text" name="content" required id="content"><%= blog.content %></textarea>
        <label for="image">Image Url</label>
        <input type="text" id="image" name="image" value="<%= blog.image %>">
        
        <button>Submit</button>
    </form>
    <a href="/blogs">Cancel</a>

