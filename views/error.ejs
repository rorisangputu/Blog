<% layout('layouts/boilerplate')%>
<div class="row">
    <div class="col-6 offset-3">
        <div class="alert alert-danger" role="alert">
            <h4 class="alert-heading"><%= err.message %> (<%= err.status %>)</h4>
            <% if (process.env.NODE_ENV !== "production"){ %>
            <p><%= err.stack %></p>
            <% } %>
            <hr>
            <p class="mb-0">If the issue persists, please contact support for assistance.</p>
        </div> 
    </div>
</div>
